<%#
  ============================================
  FOOTER PARTIAL
  ============================================

  Renders the email footer with company info and links.

  Parameters:
    - bgColor: Background color (default: #f4f4f5)
  ============================================
%>
<!-- ========== FOOTER SECTION ========== -->
<mj-section background-color="<%= typeof bgColor !== 'undefined' ? bgColor : '#f4f4f5' %>" padding="20px 30px">
  <mj-column>

    <!-- Company Info -->
    <mj-text align="center" font-size="12px" color="#6b7280" padding-bottom="10px">
      <%= company.name %> | <%= company.address %>
    </mj-text>

    <!-- Footer Links -->
    <mj-text align="center" font-size="12px" color="#6b7280">
      <a href="<%= urls.privacy %>" class="footer-link">Privacy Policy</a> |
      <a href="<%= urls.terms %>" class="footer-link">Terms of Service</a> |
      <a href="<%= urls.unsubscribe %>" class="footer-link">Unsubscribe</a>
    </mj-text>

    <!-- Copyright -->
    <mj-text align="center" font-size="11px" color="#9ca3af" padding-top="10px">
      &copy; <%= currentYear %> <%= company.name %>. All rights reserved.
    </mj-text>

  </mj-column>
</mj-section>

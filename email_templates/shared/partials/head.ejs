<%#
  ============================================
  HEAD PARTIAL
  ============================================

  Renders the email head with common attributes and styles.

  Parameters:
    - title: Email title
    - previewText: Preview text shown in email clients
    - primaryColor: Primary button/accent color (default: #2563eb)
  ============================================
%>
<mj-head>
  <!-- Document Settings -->
  <mj-title><%= typeof title !== 'undefined' ? title : 'Welcome to ' + company.name %></mj-title>
  <mj-preview><%= typeof previewText !== 'undefined' ? previewText : 'Welcome, ' + visitor.name + '!' %></mj-preview>

  <!-- Default Attributes -->
  <mj-attributes>
    <mj-all font-family="'Helvetica Neue', Helvetica, Arial, sans-serif" />
    <mj-text font-size="14px" line-height="1.6" color="#333333" />
    <mj-button background-color="<%= typeof primaryColor !== 'undefined' ? primaryColor : '#2563eb' %>" border-radius="6px" font-size="16px" font-weight="bold" />
    <mj-section padding="0" />
  </mj-attributes>

  <!-- Custom Styles -->
  <mj-style>
    .footer-link { color: #666666; text-decoration: none; }
    .footer-link:hover { text-decoration: underline; }
  </mj-style>
</mj-head>
